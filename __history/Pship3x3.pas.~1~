constructor TShip3.CreatBOT(NewN: integer; var DField: MField);
begin

end;

function TShip3.RandomOnCentre(a, b, N: integer; DField: MField): boolean;
begin
 Result:=false;
 if  (DField[a,b]=0)   then
        if (DField[a+1,b]<>1)    then
           if (DField[a-1,b]<>1)    then
               if (DField[a,b+1]<>1)  then
                   if (DField[a,b-1]<>1)  then
                       if (DField[a+1,b+1]<>1)  then
                          if (DField[a+1,b-1]<>1)  then
                               if (DField[a-1,b+1]<>1) then
                                   if (DField[a-1,b-1]<>1)  then
                                     Result:=true;
end;

